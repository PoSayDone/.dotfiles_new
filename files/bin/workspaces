#!/usr/bin/env bash

if [[ $(xrandr -q | grep 'DP-0 connected') ]]; then
  xrandr --output DP-0 --primary --mode 1920x1080 --pos 0x0 --rotate normal --output DP-1 --off --output HDMI-0 --off --output DP-2 --off --output DP-3 --off --output eDP-1-1 --off &
  bspc monitor eDP-1-1 -r 
  bspc monitor DP-0 -d '1' '2' '3' '4' '5' '6' '7' '8' '9'
else
  bspc monitor -d '1' '2' '3' '4' '5' '6' '7' '8' '9'
fi
