configuration {
	disable-history: false;
	fullscreen: false;
	hide-scrollbar: true;
	sidebar-mode: false;
}

@import "colors.rasi"

* {
	background-color: @background-alt;
	text-color: @foreground;
}

window {
	transparency: "real";
	border-radius: 0px;
	width: 110px;
	location: east;
	x-offset: -15px;
	y-offset: 0px;
}

listview {
	lines: 5;
	margin: 8px;
	spacing: 8px;
	cycle: true;
	dynamic: true;
	layout: vertical;
}

mainbox {
	background-color: @background;
	children: [ listview];
}

element {
	background-color: @background-light;
	text-color: @foreground;
	orientation: vertical;
	border-radius: 10px;
}

element-text {
	background-color: @background-alt;
	font: "feather 20";
	expand: true;
	horizontal-align: 0.5;
	vertical-align: 0;
	margin: 17px 10px 26px 10px;
}

element normal.urgent,
element alternate.urgent {
	background-color: @urgent;
	text-color: @foreground;
	border-radius: 10px;
}

element normal.active,
element alternate.active {
	background-color: @background-alt;
	text-color: @foreground;
}

element selected {
	background-color: @background;
	text-color: @background;
	border: 0px;
	border-radius: 10px;
	border-color: @border;
}

element selected.urgent {
	background-color: @urgent;
	text-color: @foreground;
}

element selected.active {
	background-color: @background-alt;
	color: @foreground;
}
